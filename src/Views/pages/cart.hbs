<h1>🛒 Carrito {{cart._id}}</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li style="margin-bottom: 20px;">
        <h3>{{this.product.title}}</h3>
        <p><strong>Descripción:</strong> {{this.product.description}}</p>
        <p><strong>Precio:</strong> ${{this.product.price}}</p>
        <p><strong>Categoría:</strong> {{this.product.category}}</p>
        <p><strong>Cantidad:</strong> {{this.quantity}}</p>

        {{#if this.product.thumbnails.[0]}}
          <img src="{{this.product.thumbnails.[0]}}" alt="{{this.product.title}}" width="150" />
        {{/if}}

        <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}?_method=DELETE" method="POST">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>🕳️ Tu carrito está vacío</p>
{{/if}}
