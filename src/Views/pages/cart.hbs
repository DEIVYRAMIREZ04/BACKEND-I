<h1>Carrito {{cart._id}}</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        <h3>{{this.product.title}}</h3>
        <p>{{this.product.description}}</p>
        <p>Precio: ${{this.product.price}}</p>
        <p>Categoría: {{this.product.category}}</p>
        <p>Cantidad: {{this.quantity}}</p>

        {{#if this.product.thumbnails.[0]}}
          <img src="{{this.product.thumbnails.[0]}}" alt="{{this.product.title}}" width="150" />
        {{/if}}

        <!-- Botón eliminar producto del carrito -->
        
        <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="post">
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit">Eliminar</button>
        </form>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}
